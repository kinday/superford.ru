.catalogue
  &__group
    padding-bottom 20px

  &__group-items
    color blue

  &__group-link
    position relative

    text-decoration none

    transition .25s .1s

    &:before
      content ''

      display block

      position absolute
      top 50%
      left 0

      width 12px
      height 12px
      margin-top -6px

      background-image url('../i/catalogue__group-link.png')
      background-image uri('../i/catalogue__group-link.png')
      background-position left center
      background-repeat no-repeat
      opacity 0

      transform rotate(1080deg)

      transition opacity .25s .15s, transform .25s .1s

    &.is-dynamic
      margin-left -20px
      padding-left 20px

      background-image url('../i/catalogue__group-link_is_active.png')
      background-image uri('../i/catalogue__group-link_is_active.png')
      background-position left center
      background-repeat no-repeat

      &.is-active
        color rgb(196,196,196)

        &:before
          opacity 1

          transform rotate(0)

          transition opacity .25s, transform .25s .1s



