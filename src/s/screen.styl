.button
  padding 10px 7px

  background-color tint(blue,10%)
  background-image linear-gradient(to bottom, rgba(0,0,0,0), rgba(shade(blue,50%),.25) 50%, rgba(0,0,0,0))
  border-radius 10px
  box-shadow inset 0 -3px 5px rgba(255,255,255,.35), 0 2px 6px -2px rgba(0,0,0,.35), 0 1px 1px -1px rgba(0,0,0,.35)
  cursor pointer

  color white
  font-weight 700
  text-shadow 0 -1px 0 rgba(0,0,0,.2)

  transition background-color .25s .1s

  &:hover
    background-color tint(blue,35%)

    transition none

  &:active
    position relative
    top 1px

  &_size
    &_small
      padding 4px 10px

      border-radius 5px

      box-shadow inset 0 -1px 3px rgba(255,255,255,.35), 0 2px 6px -2px rgba(0,0,0,.35), 0 1px 1px 0 rgba(0,0,0,.15)

  &_type
    &_buy
    &_login
      background-color green
      background-image linear-gradient(to bottom, rgba(255,255,255,.25), rgba(shade(green,50%),.25) 50%, rgba(255,255,255,.25))

      &:hover
        background-color shade(green,10%)

    &_order
      background-color rgb(220,120,0)
      background-image linear-gradient(to bottom, rgba(255,255,255,.25), rgba(shade(rgb(220,120,0),50%),.25) 50%, rgba(255,255,255,.25))

      &:hover
        background-color shade(rgb(220,120,0),10%)

    &_request
    &_sec
      background-color tint(rgb(240,240,240),10%)
      background-image linear-gradient(to bottom, rgba(0,0,0,0), rgba(shade(rgb(240,240,240),50%),.25) 50%, rgba(0,0,0,0))

      color rgb(100,100,100)
      text-shadow 0 1px 0 rgba(255,255,255,.2)

      transition background-color .25s .1s, color .25s .1s

      &:hover
        background-color tint(blue,85%)

        color shade(blue,50%)

  &_width
    &_full
      width 100%

  &.is-active
    background-color tint(blue,10%)
    background-image linear-gradient(to bottom, rgba(255,255,255,.2), rgba(shade(blue,50%),.25) 50%, rgba(0,0,0,0))
    box-shadow inset 0 2px 6px rgba(0,0,0,.25)
    color white



