            li(elem = 'item'): a(elem = 'link', mod != 'icon:fb', href = '#', title = 'Фейсбук') Фейсбук
            li(elem = 'item'): a(elem = 'link', mod != 'icon:tw', href = '#', title = 'Твиттер') Твиттер
            li(elem = 'item'): a(elem = 'link', mod != 'icon:vk', href = '#', title = 'Вконтакте') Вконтакте

    div(block = 'header-wrapper')
      header(block = 'header')
        div(elem = 'logotype')
          a(block = 'logotype', href = '/') Автозапчасти «Суперфорд»
        div(elem = 'toolbox')
          div(block = 'toolbox-row')
            div(elem = 'cell')
              dl(block = 'contact')
                dt(elem = 'title') +7 (495) <b>988 4830</b>
                dd(elem = 'desc') г. Москва
            div(elem = 'cell')
              dl(block = 'contact')
                dt(elem = 'title') <b>8 800 988 4830</b>
                dd(elem = 'desc') бесплатный по России
            div(elem = 'cell')
              div(block = 'contact')
                a(elem = 'link', href = 'skype:superford.ru?chat')
                  i.icon(mix = 'block:icon,elem:skype')
                  | superford.ru
                a(elem = 'link', href = '#')
                  i.icon(mix = 'block:icon,elem:geo')
                  | Лианозовский пр. 8
            div(elem = 'cell')
              div(block = 'cart')
                i(elem = 'icon'): span(elem = 'counter') 25
                p(elem = 'price') 25 390 <span class="r">руб.</span>
                a(elem = 'checkout', href = '#') Оформить
          div(block = 'toolbox-row')
            div(elem = 'cell')
              div(block = 'search')
                input(elem = 'input', type = 'text', placeholder = 'Номер или название детали')
                input(elem = 'submit', type = 'submit', value = 'Найти')
            div(elem = 'cell')
              button(block = 'button', mod = 'type:login,width:full')
                i.icon(mix = 'block:icon,elem:login')
                | Войти
            div(elem = 'cell')
              button(block = 'button', mod = 'type:sec,width:full') Зарегистрироваться

