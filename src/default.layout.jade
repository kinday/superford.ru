  body
    div(block = 'bay-wrapper')
      nav(block = 'bay')
        div(elem = 'menu')
          ul(block = 'menu')
            - each item in ['Доставка', 'Оплата', 'Работа с регионами', 'Контакты']
              li(elem = 'item'): a(elem = 'link', href = '#')= item
