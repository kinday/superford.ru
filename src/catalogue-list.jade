extends default.layout

block content
  nav(block = 'breadcrumbs-wrapper')
    ul(block = 'breadcrumbs')
      li(elem = 'item'): a(elem = 'link', href = '/') Главная
      li(elem = 'item'): a(elem = 'link', href = '/catalog-brand') Форд
      li(elem = 'item'): a(elem = 'link', href = '/catalog-brand') Фокус-1 98-05
      li(elem = 'item') Безопасность

  h1(block = 'title') Безопасность

  table(block = 'products')
    thead(elem = 'header')
      th(elem = 'header-title')
      th(elem = 'header-title') Наименование
      th(elem = 'header-title') Страна производства
      th(elem = 'header-title') Наличие
      th(elem = 'header-title') Цена
